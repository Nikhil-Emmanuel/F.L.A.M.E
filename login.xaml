<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="F.L.A.M.E.LoginWindow"
        Icon="Assets/flame.ico"
        Title=" F.L.A.M.E Login" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanMinimize" av:DesignHeight="565.2" av:DesignWidth="832.8">

    <Grid>

        <!-- Logo 1 Top-Left fixed -->
        <Image Source="Assets/AL-logo.png" Width="120" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" />

        <!-- Center container for Logo 2 and Login form -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" >

            <!-- Logo 2 centered -->
            <Image Source="Assets/flame.png" Width="200" Height="140" Margin="0,0,0,20" />

            <!-- Login Form -->
            <StackPanel Width="300" HorizontalAlignment="Center">

                <TextBlock Text="Username:" Margin="0,10,0,5" FontFamily="Segoe UI" FontWeight="Bold" FontSize="16"/>
                <TextBox x:Name="UsernameBox" Height="26" Width="270" VerticalContentAlignment="Center" FontSize="13" FontWeight="Medium"/>

                <TextBlock Text="Password:" Margin="0,10,0,5" FontFamily="Segoe UI" FontWeight="Bold" FontSize="16"/>
                <PasswordBox x:Name="PasswordBox" Height="26" Width="270" VerticalContentAlignment="Center"/>

                <Button Content="Login" Margin="20 50 20 0" Height="40" Background="#FF21AB00" Click="Login_Click" Foreground="White" FontSize="18" FontWeight="Heavy" FontFamily="Consolas" Width="165">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightSeaGreen"/>
                            </Trigger>
                            <!-- Clicked effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGreen"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Button.Template>
                </Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>